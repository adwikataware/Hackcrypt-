{
  "manifest_version": 3,
  "name": "DeepFake Shield",
  "version": "1.0.0",
  "description": "Real-time deepfake detection while browsing",
  "permissions": [
    "tabCapture",
    "scripting",
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "side_panel": {
    "default_path": "side-panel/panel.html"
  },
  "action": {
    "default_title": "DeepFake Shield",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "host_permissions": [
    "http://192.168.0.108:8000/*"
  ]
}
